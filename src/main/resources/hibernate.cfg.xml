<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL95Dialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/webclinic</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- List of XML mapping files -->
        <!--<mapping resource="ru/mitroshkin/model/Client.hbm.xml"/>-->
        <!--<mapping resource="ru/mitroshkin/model/pet/Pet.hbm.xml"/>-->
        <mapping class="ru.mitroshkin.model.Client"/>
        <mapping class="ru.mitroshkin.model.pet.Pet"/>
    </session-factory>
</hibernate-configuration>